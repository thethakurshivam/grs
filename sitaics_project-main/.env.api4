# Environment Variables for BPRND Student API (api4.js)
# Port 3004 - BPRND Student Authentication & Management

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3004
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/sitaics

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=bprnd-student-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:5173

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081,http://127.0.0.1:5173,http://127.0.0.1:3000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Enable/disable detailed error messages in production
SHOW_ERROR_DETAILS=true

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ===========================================
# API CONFIGURATION
# ===========================================
# API version
API_VERSION=v1

# Enable/disable API documentation endpoint
ENABLE_API_DOCS=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug logging
DEBUG=true

# Enable MongoDB query logging
MONGOOSE_DEBUG=false
